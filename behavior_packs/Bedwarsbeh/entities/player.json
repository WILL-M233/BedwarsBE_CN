{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false,
      "scripts": {
        "animate": [
          "test_death",
          "health_display"
//          "check_inventory_empty"
        ]
      },
      "animations": {
        "test_death": "controller.animation.bedwars.test_death",
        "health_display": "controller.animation.bedwars.health_display"
//        "check_inventory_empty": "controller.animation.bedwars.check_inventory_empty"
      }
    },
    "component_groups": {
      "minecraft:add_bad_omen": {
        "minecraft:spell_effects": {
          "add_effects": [
            {
              "effect": "bad_omen",
              "duration": 6000,
              "display_on_screen_animation": true
            }
          ]
        },
        "minecraft:timer": {
          "time": [
            0.0,
            0.0
          ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:clear_add_bad_omen",
            "target": "self"
          }
        }
      },
      "minecraft:clear_bad_omen_spell_effect": {
        "minecraft:spell_effects": {}
      },
      "minecraft:raid_trigger": {
        "minecraft:raid_trigger": {
          "triggered_event": {
            "event": "minecraft:remove_raid_trigger",
            "target": "self"
          }
        },
        "minecraft:spell_effects": {
          "remove_effects": "bad_omen"
        }
      }
    },
    "components": {
      "minecraft:damage_sensor": {
        "triggers": [
          {  //免疫队伍伤害
            "on_damage": {
              "filters": {
                "any_of": [
                  {
                    "all_of": [
                      {
                        "test": "has_tag",
                        "value": "team1"
                      },
                      {
                        "test": "has_tag",
                        "subject": "other",
                        "value": "team1"
                      }
                    ]
                  },
                  {
                    "all_of": [
                      {
                        "test": "has_tag",
                        "value": "team2"
                      },
                      {
                        "test": "has_tag",
                        "subject": "other",
                        "value": "team2"
                      }
                    ]
                  },
                  {
                    "all_of": [
                      {
                        "test": "has_tag",
                        "value": "team3"
                      },
                      {
                        "test": "has_tag",
                        "subject": "other",
                        "value": "team3"
                      }
                    ]
                  },
                  {
                    "all_of": [
                      {
                        "test": "has_tag",
                        "value": "team4"
                      },
                      {
                        "test": "has_tag",
                        "subject": "other",
                        "value": "team4"
                      }
                    ]
                  }
                ]
              }
            },
            "deals_damage": false
          },
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "has_damage",
                    "value": "fatal"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  }
                ]
              },
              "event": "bedwars:set_other_fatal_damage_uid",
              "target": "other"
            }
          },
          {  //检测受到伤害的玩家
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "has_damage",
                    "value": "attack"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  }
                ]
              },
              "event": "bedwars:player_damaged",
              "target": "self"
            }
          },
          {  //检测伤害了玩家的玩家
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "has_damage",
                    "value": "attack"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  }
                ]
              },
              "event": "bedwars:damaged_player_player",
              "target": "other"
            }
          },
          { //实现弓箭射中玩家产生声音提示的效果
            "on_damage": {
              "filters": [
                {
                  "all_of": [
                    {
                      "test": "is_family",
                      "subject": "damager",
                      "value": "arrow"
                    },
                    {
                      "test": "is_family",
                      "subject": "other",
                      "value": "player"
                    }
                  ]
                }
              ],
              "target": "other",
              "event": "bedwars:bow_hit"
            }
          }
        ]
      },
      "minecraft:on_death": {
        "event": "bedwars:set_self_fatal_damage_uid-and-detect_in_void_kill-and-respawn",
        "target": "self"
      },
      "minecraft:experience_reward": {
        "on_death": "Math.Min(query.player_level * 7, 100)"
      },
      "minecraft:type_family": {
        "family": [
          "player"
        ]
      },
      "minecraft:is_hidden_when_invisible": {},
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:can_climb": {},
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:attack": {
        "damage": 1
      },
      "minecraft:player.saturation": {
        "value": 20
      },
      "minecraft:player.exhaustion": {
        "value": 0,
        "max": 4
      },
      "minecraft:player.level": {
        "value": 0,
        "max": 24791
      },
      "minecraft:player.experience": {
        "value": 0,
        "max": 1
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": -1,
        "inhale_time": 3.75,
        "generates_bubbles": false
      },
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": false
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:insomnia": {
        "days_until_insomnia": 3
      },
      "minecraft:rideable": {
        "seat_count": 2,
        "family_types": [
          "parrot_tame"
        ],
        "pull_in_entities": true,
        "seats": [
          {
            "position": [
              0.4,
              -0.2,
              -0.1
            ],
            "min_rider_count": 0,
            "max_rider_count": 0,
            "lock_rider_rotation": 0
          },
          {
            "position": [
              -0.4,
              -0.2,
              -0.1
            ],
            "min_rider_count": 1,
            "max_rider_count": 2,
            "lock_rider_rotation": 0
          }
        ]
      },
      "minecraft:conditional_bandwidth_optimization": {},
      "minecraft:scaffolding_climber": {},
      "minecraft:environment_sensor": {
        "triggers": {
          "filters": {
            "all_of": [
              {
                "test": "has_mob_effect",
                "subject": "self",
                "value": "bad_omen"
              },
              {
                "test": "is_in_village",
                "subject": "self",
                "value": true
              }
            ]
          },
          "event": "minecraft:trigger_raid"
        }
      }
    },
    "events": {
			"bedwars:bow_hit": {
				"run_command": {
					"command": [
						"playsound random.orb @s ~ ~ ~ 0.4 0.5"
					]
				}
			},
			"minecraft:gain_bad_omen": {
        "add": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        }
      },
      "minecraft:clear_add_bad_omen": {
        "remove": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:clear_bad_omen_spell_effect"
          ]
        }
      },
      "minecraft:trigger_raid": {
        "add": {
          "component_groups": [
            "minecraft:raid_trigger"
          ]
        }
      },
      "minecraft:remove_raid_trigger": {
        "remove": {
          "component_groups": [
            "minecraft:raid_trigger"
          ]
        }
      },
      "bedwars:set_other_fatal_damage_uid": {
        "run_command": {
          "command": [
            "function playerI"
          ]
        }
      },
      "bedwars:set_self_fatal_damage_uid-and-detect_in_void_kill-and-respawn": {
        "run_command": {
          "command": [
            "function playerII"
          ]
        }
      },
      "bedwars:player_die": {
        "run_command": {
          "command": [
            "function playerIII"
          ]
        }
      },
      "bedwars:respawn_command":{
        "run_command":{
          "command": [
            "tag @s add run_respawn_command",
            "function respawn/respawn_degrade"
          ]
        }
      },
      "bedwars:player_damaged":{
        "run_command":{
          "command": [
            "tag @s add player_damaged",
            //隐身失效
            "execute @s[scores={invisible_time=1..}] ~~~ tellraw @s { \"rawtext\" : [{\"translate\":\"text.tellraw.ingameinfo.invisible_expired\"} ] }",
            "execute @s[scores={invisible_time=1..}] ~~~ scoreboard players set @s invisible_time 0",
            "execute @s[scores={invisible_time=1..}] ~~~ effect @s invisibility 0 3 true"
          ]
        }
      },
      "bedwars:damaged_player_player":{
        "run_command":{
          "command": [
            "tag @s add damaged_player_player"
          ]
        }
      }
    }
  }
}
